<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".help.ui.main.QRScannerHelp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/serial_no"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_corner"
                android:elevation="4dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="6"
                android:textColor="#fff"
                android:textSize="@dimen/help_text_size" />


            <Button
                android:id="@+id/btn_qr"
                style="@style/smallTextViewStyle_white"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_bg_rounded"
                android:text="Tag Anchor" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_help_txtvw"
            android:gravity="center"
            android:text="@string/tag_anchor_1"
            android:textSize="@dimen/help_text_size"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/screenshot_1"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_marginTop="@dimen/dimen_help"
            android:src="@drawable/screenshot_tag_anchor" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_help_txtvw"
            android:gravity="center_vertical"
            android:text="@string/tag_anchor_2"

            android:textSize="@dimen/help_text_size" />
    </LinearLayout>
</ScrollView>